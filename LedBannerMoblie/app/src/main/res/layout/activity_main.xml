<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="textLed"
            type="com.ledbanner.ledmobile.models.TextLed" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:setBGColor="@{textLed.backgroundColor}">

        <com.ledbanner.ledmobile.widgets.MyTextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:autoSizeTextType="none"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:text="@{textLed.content}"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setTextColor="@{textLed.textColor}"
            app:setTextSizeLedMain="@{textLed.size}" />

        <FrameLayout
            android:id="@+id/background_infrontof"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundLed="@{textLed.led}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>
