<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/expanded_container"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGreyDark"
        android:visibility="gone">
        <RelativeLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorGreyDark">
            <TextView
                android:id="@+id/window_title"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_4"
                android:layout_marginLeft="12dp"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/text_cancel"
                android:layout_toRightOf="@id/window_title"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="3dp"
                android:padding="2dp"/>
        </RelativeLayout>
        <View
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorLightBlue"/>
        <TextView
            android:id="@+id/window_title_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_4">
            <TextView
                android:id="@+id/text_account"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/dp_16"
                android:ellipsize="marquee" />
            <ImageView
                android:id="@+id/imageView_copacc"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_copy" />
        </LinearLayout>
        <TextView
            android:id="@+id/window_title_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4">
            <TextView
                android:id="@+id/text_password"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:password="true"
                android:fontFamily="@font/utm_avo"
                android:ellipsize="marquee"
                android:layout_marginLeft="@dimen/dp_16"/>
            <ImageView
                android:id="@+id/imageView_coppass"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_copy" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/collapse_view"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/ic_close"
            tools:ignore="ContentDescription"/>
        <!--Icon of floating widget -->
        <ImageView
            android:id="@+id/collapsed_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_launcher"
            tools:ignore="ContentDescription"/>
        <!--Close button-->
    </LinearLayout>

</LinearLayout>