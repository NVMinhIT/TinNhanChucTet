<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:padding="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_hour"
            android:text="21"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_seperate"
            android:textSize="40sp"
            android:layout_toRightOf="@+id/txt_hour"
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_minute"
            android:text="21"
            android:layout_toRightOf="@+id/txt_seperate"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_day_alarm"
            android:layout_below="@+id/txt_hour"
            android:textSize="15sp"
            android:text="today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/tb_bell_alarm"
            android:layout_marginRight="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:checked="true"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/custom_bell_alarm"
            android:layout_width="64dp"
            android:layout_height="64dp" />

        <ImageView
            android:id="@+id/ic_popup_menu"
            android:src="@drawable/icon_popup_menu"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</android.support.v7.widget.CardView>