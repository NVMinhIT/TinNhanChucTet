<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8">

    <TextView
        android:textSize="@dimen/sp_16"
        android:id="@+id/text_ringtone_name"
        android:layout_width="@dimen/dp_0"
        android:layout_marginRight="@dimen/dp_32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/radio_button"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/text_color_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:background="@android:color/transparent"
        android:button="@drawable/rd_selector"
        android:clickable="false"
        android:id="@+id/radio_button"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="@id/text_ringtone_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_ringtone_name" />
    <TextView
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/radio_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/text_color_secondary"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1" />
</android.support.constraint.ConstraintLayout>